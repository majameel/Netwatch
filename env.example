# NetPulse Environment Configuration

# Gemini AI API Key (Optional)
# Get your API key from: https://makersuite.google.com/app/apikey
# If not provided, AI features will be disabled
GEMINI_API_KEY=your_gemini_api_key_here

# Alternative names for the same key (for compatibility)
API_KEY=your_gemini_api_key_here

# Application Configuration
NODE_ENV=production
PORT=8080

# Webhook URLs for Notifications (Optional)
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=

# Email webhook URL for notifications  
EMAIL_WEBHOOK_URL=

# Security Configuration (Optional)
# Set to true to enable additional security headers
ENABLE_SECURITY_HEADERS=true

# Logging Configuration (Optional)
# Set to true to enable debug logging
DEBUG_MODE=false

# Application Features (Optional)
# Default settings for new users
DEFAULT_LATENCY_THRESHOLD=500
DEFAULT_PACKET_LOSS_THRESHOLD=10
DEFAULT_PING_INTERVAL=5
DEFAULT_THEME=dark

# Docker Configuration (Optional)
# Container user ID for security
USER_ID=1001
GROUP_ID=1001